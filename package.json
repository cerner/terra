{
  "name": "terra",
  "version": "0.1.0",
  "author": "Cerner Corporation",
  "description": "Package hosting all of terra components",
  "engines": {
    "node": "^10.0.0 || ^12.0.0 || ^14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerner/terra"
  },
  "bugs": {
    "url": "https://github.com/cerner/terra/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "Cerner",
    "Terra",
    "Terra Application",
    "terra-application",
    "Terra Clinical",
    "terra-clinical",
    "Terra Core",
    "terra-core",
    "Terra Framework",
    "terra-framework",
    "Terra Graphs",
    "terra-graphs",
    "Terra Toolkit",
    "terra-toolkit",
    "UI"
  ],
  "browserslist": [
    "extends @cerner/browserslist-config-terra"
  ],
  "eslintConfig": {
    "extends": "./eslint-config-terra/eslint.config.js",
    "rules": {
      "react/forbid-prop-types": "off",
      "import/no-extraneous-dependencies": "off",
      "no-undef": "off",
      "import/extensions": "off",
      "no-redeclare": "off",
      "jsx-a11y/role-has-required-aria-props": "off"
    },
    "overrides": [
      {
        "files": [
          "./terra-functional-testing/tests/mocha/services/wdio-visual-regression-service/**/*.js",
          "./**/jest/**/*",
          "carbon-graphs/**/*.jsx",
          "carbon-graphs/src/components/**/*.jsx"
        ],
        "env": {
          "mocha": true,
          "node": true
        },
        "rules": {
          "prefer-arrow-callback": "off",
          "func-names": "off",
          "import/no-extraneous-dependencies": "off",
          "space-before-function-paren": "off"
        }
      }
    ]
  },
  "package-json-lint": {
    "extends": "./packages/package-json-lint-config-terra/package-json-lint.config.js",
    "projectType": "devModule",
    "rules": {
      "require-no-hard-coded-dependency-versions": {
        "severityType": "error",
        "allowList": [
          "eslint-plugin-react",
          "axe-core",
          "inquirer"
        ]
      }
    }
  },
  "stylelint": {
    "extends": "@cerner/stylelint-config-terra",
    "rules": {
      "scss/at-mixin-pattern": "^(terra-)[a-z]+([a-z0-9-]+[a-z0-9]+)?$"
    }
  },
  "workspaces": [
    "./*"
  ],
  "dependencies": {
    "classnames": "^2.3.2",
    "final-form": "^4.11.1",
    "prop-types": "^15.5.10",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-final-form": "^6.3.0",
    "react-intl": "^2.8.0",
    "react-router-dom": "^5.0.0",
    "react-tsparticles": "^1.33.1",
    "xfc": "^1.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/helpers": "^7.21.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-syntax-async-generators": "^7.8.4",
    "@babel/plugin-transform-async-to-generator": "^7.20.7",
    "@babel/plugin-transform-object-assign": "^7.18.6",
    "@babel/plugin-transform-regenerator": "^7.20.5",
    "@babel/plugin-transform-runtime": "^7.21.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/register": "^7.21.0",
    "@babel/runtime": "^7.21.0",
    "@cerner/browserslist-config-terra": "^3.1.0",
    "@cerner/eslint-config-terra": "^5.0.0",
    "@cerner/jest-config-terra": "^1.0.0",
    "@cerner/package-json-lint": "^1.3.0",
    "@cerner/package-json-lint-config-terra": "^1.2.0",
    "@cerner/stylelint-config-terra": "^4.0.0",
    "@cerner/terra-aggregate-translations": "^2.0.1",
    "@cerner/terra-cli": "^1.6.0",
    "@cerner/terra-dev-site": "^8.0.0",
    "@cerner/terra-enzyme-intl": "4.6.0",
    "@cerner/terra-functional-testing": "^3.0.0",
    "@cerner/terra-open-source-scripts": "^1.0.1",
    "@cerner/webpack-config-terra": "^3.0.1",
    "@octokit/core": "^3.4.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^10.0.4",
    "@testing-library/react-hooks": "^5.0.0",
    "@testing-library/user-event": "^12.6.0",
    "ajv": "^7.2.4",
    "autoprefixer": "^10.4.13",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^9.1.2",
    "babel-plugin-istanbul": "^6.1.1",
    "babel-plugin-minify-replace": "^0.5.0",
    "babel-preset-minify": "^0.5.1",
    "bufferutil": "^4.0.1",
    "check-installed-dependencies": "^1.0.0",
    "classnames": "^2.3.2",
    "commander": "^5.1.0",
    "core-js": "^3.28.0",
    "css-loader": "^6.7.3",
    "cssnano": "^5.1.15",
    "danger": "^11.2.3",
    "details-polyfill": "^1.2.0",
    "docdash": "^1.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.7",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^40.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^2.0.1",
    "glob": "^7.1.2",

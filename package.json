{
    "name": "terra",
    "version": "0.1.0",
    "author": "Cerner Corporation",
    "description": "Package hosting all of terra components",
    "engines": {
        "node": "^10.0.0 || ^12.0.0 || ^14.0.0",
        "npm": "^6.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cerner/terra"
    },
    "bugs": {
        "url": "https://github.com/cerner/terra/issues"
    },
    "license": "Apache-2.0",
    "keywords": [
        "Cerner",
        "Terra",
        "Terra Application",
        "terra-application",
        "Terra Clinical",
        "terra-clinical",
        "Terra Core",
        "terra-core",
        "Terra Framework",
        "terra-framework",
        "Terra Graphs",
        "terra-graphs",
        "Terra Toolkit",
        "terra-toolkit",
        "UI"
    ],
    "browserslist": [
        "extends @cerner/browserslist-config-terra"
    ],
    "eslintConfig": {
        "extends": "./packages/eslint-config-terra/eslint.config.js",
        "rules": {
            "react/forbid-prop-types": "off",
            "import/no-extraneous-dependencies": "off",
            "no-undef": "off",
            "import/extensions": "off",
            "no-redeclare": "off",
            "jsx-a11y/role-has-required-aria-props": "off"
        },
        "overrides": [
            {
                "files": [
                    "packages/terra-functional-testing/tests/mocha/services/wdio-visual-regression-service/**/*.js",
                    "packages/**/jest/**/*",
                    "carbon-graphs/**/*.jsx",
                    "carbon-graphs/src/components/**/*.jsx"
                ],
                "env": {
                    "mocha": true,
                    "node": true
                },
                "rules": {
                    "prefer-arrow-callback": "off",
                    "func-names": "off",
                    "import/no-extraneous-dependencies": "off",
                    "space-before-function-paren": "off"
                }
            }
        ]
    },
    "package-json-lint": {
        "extends": "./packages/package-json-lint-config-terra/package-json-lint.config.js",
        "projectType": "devModule",
        "rules": {
            "require-no-hard-coded-dependency-versions": {
                "severityType": "error",
                "allowList": [
                    "eslint-plugin-react",
                    "axe-core",
                    "inquirer"
                ]
            }
        }
    },
    "stylelint": {
        "extends": "./packages/stylelint-config-terra",
        "rules": {
            "scss/at-mixin-pattern": "^(terra-)[a-z]+([a-z0-9-]+[a-z0-9]+)?$"
        }
    },
    "workspaces": [
        "./*"
    ],
    "devDependencies": {
        "@babel/cli": "^7.20.7",
        "@babel/core": "^7.21.0",
        "@babel/helpers": "^7.10.4",
        "@babel/plugin-proposal-class-properties": "^7.4.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
        "@babel/plugin-syntax-async-generators": "^7.8.4",
        "@babel/plugin-transform-async-to-generator": "^7.5.0",
        "@babel/plugin-transform-object-assign": "^7.2.0",
        "@babel/plugin-transform-regenerator": "^7.20.5",
        "@babel/plugin-transform-runtime": "^7.21.0",
        "@babel/polyfill": "^7.10.4",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-react": "^7.0.0",
        "@babel/register": "^7.10.5",
        "@babel/runtime": "^7.11.2",
        "@cerner/browserslist-config-terra": "^3.1.0",
        "@cerner/eslint-config-terra": "^5.4.0",
        "@cerner/jest-config-terra": "^1.0.0",
        "@cerner/package-json-lint": "^1.3.0",
        "@cerner/package-json-lint-config-terra": "^1.2.0",
        "@cerner/stylelint-config-terra": "^4.0.0",
        "@cerner/terra-aggregate-translations": "^2.0.1",
        "@cerner/terra-application-docs": "^3.0.0",
        "@cerner/terra-cli": "^1.6.0",
        "@cerner/terra-core-docs": "^1.0.0",
        "@cerner/terra-dev-site": "^8.0.0",
        "@cerner/terra-docs": "^1.0.0",
        "@cerner/terra-enzyme-intl": "^4.6.0",
        "@cerner/terra-framework-docs": "^1.0.0",
        "@cerner/terra-functional-testing": "^3.0.0",
        "@cerner/terra-graphs-docs": "^1.0.1",
        "@cerner/terra-open-source-scripts": "^1.0.1",
        "@cerner/terra-toolkit-docs": "^2.0.0",
        "@cerner/webpack-config-terra": "^3.0.0",
        "@octokit/core": "^3.6.0",
        "@testing-library/dom": "^9.0.1",
        "@testing-library/jest-dom": "^5.11.6",
        "@testing-library/react": "^10.0.4",
        "@testing-library/react-hooks": "^5.0.0",
        "@testing-library/user-event": "^12.6.0",
        "autoprefixer": "^10.0.0",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-istanbul": "^6.0.0",
        "babel-plugin-minify-replace": "^0.5.0",
        "babel-preset-minify": "^0.5.1",
        "bufferutil": "^4.0.1",
        "check-installed-dependencies": "^1.0.0",
        "commander": "^5.1.0",
        "core-js": "^3.15.2",
        "css-loader": "^5.0.1",
        "cssnano": "^4.1.10",
        "danger": "^11.2.3",
        "details-polyfill": "^1.2.0",
        "docdash": "^1.2.0",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "enzyme-to-json": "^3.2.2",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^24.0.6",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "final-form": "^4.11.1",
        "gh-pages": "^2.0.1",
        "glob": "^7.1.6",
        "html-webpack-plugin": "^4.5.0",
        "jest": "^26.6.3",
        "jsdoc": "^3.6.4",
        "ky": "^0.12.0",
        "lerna": "^6.5.1",
        "link-parent-bin": "^1.0.0",
        "loader-runner": "^4.1.0",
        "loader-utils": "^1.4.0",
        "memory-fs": "^0.5.0",
        "mini-css-extract-plugin": "^1.3.1",
        "one-cerner-style-icons": "https://github.com/cerner/one-cerner-style-icons/archive/v1.34.0.tar.gz",
        "postcss": "8.3.x",
        "postcss-loader": "^7.0.2",
        "prettier": "^2.0.5",
        "prop-types": "^15.5.8",
        "raf": "^3.4.1",
        "react": "^16.8.5",
        "react-dom": "^16.8.5",
        "react-router-dom": "^5.0.0",
        "regenerator-runtime": "^0.13.9",
        "style-loader": "^2.0.0",
        "stylelint": "^13.0.0",
        "url-loader": "^4.1.1",
        "utf-8-validate": "^5.0.2",
        "webpack": "^5.28.0",
        "webpack-cli": "^4.6.0",
        "webpack-dev-server": "^4.11.1",
        "webpack-merge": "^5.4.0",
        "xfc": "^1.2.1"
    },
    "scripts": {
        "bootstrap:hoist": "lerna bootstrap --hoist --force-local --nohoist=one-cerner-style-icons",
        "clean": "$(lerna clean --yes || true) && echo 'removing root node_modules' && rm -rf node_modules && echo 'removed root node_modules'",
        "clean:all": "npm run clean:build && npm run clean",
        "clean:build": "rm -rf ./packages/**/lib",
        "clean:install": "npm run clean:all && time npm install",
        "clean:package-lock": "rm -rf package-lock.json && rm -rf ./packages/**/package-lock.json",
        "compile": "npm run compile:clean && npm run compile:build",
        "compile:build": "lerna run compile --parallel",
        "danger": "danger ci",
        "deploy": "npm run compile:prod && gh-pages -d build",
        "deploy-terra-ui": "gh-pages -d build",
        "heroku-postbuild": "npm install --only=dev && npm run compile:prod",
        "jest": "jest",
        "jest:coverage": "jest --coverage",
        "jest:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "lint": "npm run lint:js && npm run lint:scss && npm run lint:package-json",
        "lint:js": "eslint --ext .js,.jsx .",
        "lint:fix": "eslint --fix --ext .js,.jsx .",
        "lint:scss": "stylelint './**/src/**/*.scss' --syntax scss",
        "lint:package-json": "npx terra -- package-json-lint",
        "mocha": "cd ./packages/terra-functional-testing && npm run mocha",
        "postinstall": "npm run bootstrap:hoist && npm run compile:build",
        "pretest": "npm run lint",
        "prepare-for-release": "npx terra -- prepare-for-release",
        "start": "NODE_OPTIONS=--max_old_space_size=8192 webpack serve --config webpack.dev-site.config.js",
        "test": "npm run lint && npm run jest && npm run mocha",
        "wdio": "terra wdio --themes terra-default-theme clinical-lowlight-theme orion-fusion-theme",
        "wdio-default": "terra wdio --themes terra-default-theme",
        "wdio-lowlight": "terra wdio --themes clinical-lowlight-theme",
        "wdio-fusion": "terra wdio --themes orion-fusion-theme"
    },
    "other scripts (needs review)": {
        "clean:obsolete-snapshots": "npm test -- -u",
        "compile:application": "lerna ls -a | sed 's/@cerner\\///g' | cut -d ' ' -f1 | xargs -I {} babel {}/src --out-dir {}/lib --copy-files",
        "compile:prod": "rm -rf ./build; NODE_ENV=production webpack --mode=production --config webpack.dev-site.config.js",
        "compile:prod-with-aggregate": "rm -rf ./build; webpack --mode=production --env enableAggregateThemes",
        "compile:lowlight": "rm -rf ./build; THEME=clinical-lowlight-theme webpack --mode=production",
        "compile:lowlight-with-aggregate": "rm -rf ./build; THEME=clinical-lowlight-theme webpack --mode=production --env enableAggregateThemes",
        "compile:fusion": "rm -rf ./build; THEME=orion-fusion-theme webpack --mode=production",
        "compile:fusion-with-aggregate": "rm -rf ./build; THEME=orion-fusion-theme webpack --mode=production --env enableAggregateThemes",
        "docs": "node scripts/root-readme-updater/index.js",
        "docs:peerDependencies": "node scripts/peer-dependency-generator/index.js",
        "link-parent-bin": "link-parent-bin",
        "pack": "webpack --mode=production",
        "pack:dev-site": "webpack ./webpack.dev-site.config.js --mode=development",
        "start2": "webpack serve --env enableAggregateThemes",
        "start-prod": "webpack serve --mode=production",
        "start-prod-no-hotloading": "webpack serve --env disableHotReloading --mode=production",
        "start-prod-with-aggregate": "webpack serve --env disableHotReloading --mode=production --env enableAggregateThemes",
        "start-static": "npm run compile:prod && terra express-server --site ./build",
        "start-heroku": "terra express-server --port $PORT --site './build' ",
        "update-package-readme": "node scripts/root-readme-updater/index.js",
        "wdio-site": "npm run terra -- wdio --site build --browsers chrome firefox --locales en fr --formFactors small large",
        "wdio-webpack": "npm run terra -- wdio",
        "wdio:clean": "rm -rf build && npm run pack && npm run wdio-site && npm run wdio-webpack"
    },
    "//": [
        "Comments section (please remove once resolved):",
        "confirm if the following scripts are needed and remove otherwise:",
        "compile:application",
        "link-parent-bin",
        "all scripts with the aggregate flag",
        "remove all scripts with the aggregate flag if not needed",
        "update-package-readme",
        "deploy",
        "deploy-terra-ui",
        "pack",
        "danger",
        "additional start scripts",
        "clean:obsolete-snapshots",
        "do the keywords need updating?",
        "fix wdio tests script",
        "add npm run wdio back to test script once fixed",
        "update eslintconfig"
    ]
}
